print(b)


b = np.eye(4, 3)
print(b)


b = np.eye(5, 4, k=-1)
print(b)




x = np.array([1, 2, 3])
y = x # y es una ’vista’ de x
x[0] = 10 # luego veremos esta orden
print(y)

x = np.array([1, 2, 3])
y = np.copy(x)
x[0] = 10
print(y)


a = np.array([[1, 2], [3, 4]])
