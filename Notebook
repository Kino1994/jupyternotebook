np.concatenate((a, b))




x = np.array([0, 1, 2])
y = np.array([-1, 0.2, 0.9])
np.concatenate((x, y))


np.concatenate(([x], [y]))
np.array([[ 0.0, 1.0, 2.0],[-1.0, 0.2, 0.9]])




a = np.array([[1, 2], [3, 4]])

np.repeat(a, 2, axis=0)

np.array([[1, 2],[1, 2],[3, 4],[3, 4]])

np.repeat(a, 2, axis=1)
np.array([[1, 1, 2, 2],[3, 3, 4, 4]])



a = np.array([[0, 1, 2, 3], [5, 6, 7, 8]])

np.roll(a, 1, axis=0)
np.array([[5, 6, 7, 8],[0, 1, 2, 3]])

np.roll(a, -1, axis=1)
np.array([[1, 2, 3, 0],[6, 7, 8, 5]])


